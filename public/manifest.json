{
  "manifest_version": 2,

  "name": "Gratiis",
  "description": "",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
        "storagedb.js",
        "background.js",
        "alarms.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": false
  }],
  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "notifications",
    "downloads",
    "storage",
    "unlimitedStorage",
    "https://www.ecb.europa.eu/stats/eurofxref/eurofxref-daily.xml"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
